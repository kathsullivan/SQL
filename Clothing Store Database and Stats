SELECT * FROM clothing_store;


--Display the database ordered by size

SELECT * FROM clothing_store ORDER BY size desc;


--Display the database ordered by price

SELECT * FROM clothing_store ORDER BY price asc;


--What is the average price of items in the clothing store?

SELECT AVG(price)
FROM clothing_store



